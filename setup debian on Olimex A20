# to set keyboard in X11
setxkbmap fr

# to be able to mount Pharaoh shares
aptitude install cifs-tools
aptitude install smbclient

# mount osiris @ pharaoh (must have link option and smb2 set on pharaoh)
mkdir /mnt/pharaoh
echo “username=Osiris” > /root/pharaoh_credential
echo “password=osiris” >> /root/pharaoh_credential
echo “domain=BURAIS.FR” >> /root/pharaoh_credential
chmod 400 /root/pharaoh_credential
mount.cifs //192.168.10.2/osiris /mnt/pharaoh -o credentials=/root/pharaoh_credential
ln -s /mnt/pharaoh /root/pharaoh

# to be able to compile Uboot and kernel
aptitude install build-essential u-boot-tools uboot-mkimage bc

# to be able to manage files
aptitude install mc

